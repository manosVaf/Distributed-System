<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#653a3a"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Url"
        android:id="@+id/url"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/point"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:background="#ebeb17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point"
        android:id="@+id/point"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1d697e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/name"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#66804c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Check-In"
        android:id="@+id/checkin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#a2286b"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nametext"
        android:layout_alignBottom="@+id/name"
        android:layout_alignLeft="@+id/checkin"
        android:layout_alignStart="@+id/checkin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/pointtext"
        android:layout_alignTop="@+id/point"
        android:layout_alignLeft="@+id/nametext"
        android:layout_alignStart="@+id/nametext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/urltext"
        android:layout_alignTop="@+id/url"
        android:layout_alignLeft="@+id/pointtext"
        android:layout_alignStart="@+id/pointtext" />

</RelativeLayout>